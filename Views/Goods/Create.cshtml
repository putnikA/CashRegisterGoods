@model CashRegisterGoods.Models.Goods

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Goods</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PLU" class="control-label"></label>
                <input asp-for="PLU" class="form-control" />
                <span asp-validation-for="PLU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NetPrice" class="control-label">Net price</label>
                <input asp-for="NetPrice" class="form-control" />
                <span asp-validation-for="NetPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PDV" class="control-label">PDV</label>
                <select asp-for="PDV" class="form-control" id="PDV">
                    <option value="10%">10%</option>
                    <option value="20%">20%</option>
                </select>
                <span asp-validation-for="PDV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Margin" class="control-label">Margin (%)</label>
                <input asp-for="Margin" class="form-control" id="Margin" />
                <span asp-validation-for="Margin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellingPricePerUnit" class="control-label">Selling price per unit</label>
                <input asp-for="SellingPricePerUnit" class="form-control" />
                <span asp-validation-for="SellingPricePerUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Barcode" class="control-label"></label>
                <input asp-for="Barcode" class="form-control" type="text" pattern="[0-9]*" data-val-required="Barcode is required." />
                <span asp-validation-for="Barcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
    <script>
        // Call the function for each field that needs validation
        validatePositiveNumberInput('Barcode', 'Barcode must be a positive integer.');
        validatePositiveNumberInput('NetPrice', 'Net price must be a positive number.');
        validatePositiveNumberInput('Quantity', 'Quantity must be a positive number.');
        validatePositiveNumberInput('PLU', 'PLU must be a positive number.');
        validatePositiveNumberInput('SellingPricePerUnit', 'Selling price per unit must be a positive number.');
    </script>
}